<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Nuotti.Projector.Views.ScoreboardView">
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource DividerBrush}"
                BorderThickness="0,0,0,2"
                Padding="24,16">
            <StackPanel>
                <TextBlock Text="ðŸ† Scoreboard"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="SongInfoText"
                           Text="After Song 1"
                           FontSize="24"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Scoreboard content -->
        <ScrollViewer Grid.Row="1" 
                      x:Name="ScoreboardScrollViewer"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      Padding="32">
            <StackPanel x:Name="ScoreboardPanel" Spacing="8">
                <!-- Player entries will be added dynamically -->
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer info -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource DividerBrush}"
                BorderThickness="0,2,0,0"
                Padding="24,12">
            <TextBlock x:Name="FooterText"
                       Text="Get ready for the next song!"
                       FontSize="20"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
