<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:Nuotti.Projector.Controls"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="Nuotti.Projector.MainWindow"
        Title="ðŸŽµ Nuotti Projector"
        Background="{DynamicResource BackgroundBrush}">
    <!-- Main container with safe area overlay -->
    <Grid>
        <!-- Content with safe area margins -->
        <Grid x:Name="ContentGrid" RowDefinitions="Auto,*,Auto" ColumnDefinitions="2*,*">
        <!-- Header with session code and theme toggle -->
        <Border Background="{DynamicResource HeaderBrush}" 
                BorderBrush="{DynamicResource DividerBrush}"
                BorderThickness="0,0,0,2"
                Padding="16" 
                Grid.ColumnSpan="2">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="12" Grid.Column="0">
                    <TextBlock Text="ðŸŽµ" FontSize="48" VerticalAlignment="Center"/>
                    <TextBlock x:Name="SessionCodeText" 
                               Text="SESSION" 
                               FontSize="48" 
                               Foreground="{DynamicResource PrimaryBrush}" 
                               FontWeight="Bold"/>
                </StackPanel>
                <TextBlock x:Name="ConnectionStatus" 
                           Text="Connecting..." 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           Margin="16,0,0,0" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Grid.Column="1"/>
                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="2">
                    <Button x:Name="TallyToggleButton"
                            Content="ðŸ‘ï¸"
                            FontSize="20"
                            Padding="8"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="OnToggleTallyVisibility"
                            ToolTip.Tip="Toggle tally visibility during guessing"/>
                    <Button x:Name="SafeAreaButton"
                            Content="ðŸŽ¯"
                            FontSize="20"
                            Padding="8"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="OnToggleSafeAreaFrame"
                            ToolTip.Tip="Toggle safe area frame"/>
                    <Button x:Name="MonitorButton"
                            Content="ðŸ“º"
                            FontSize="20"
                            Padding="8"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="OnMonitorSelectionClick"
                            ToolTip.Tip="Select monitor and go fullscreen"/>
                    <Button x:Name="ThemeToggleButton"
                            Content="ðŸŒ™"
                            FontSize="24"
                            Padding="12"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ToggleTheme"
                            ToolTip.Tip="Toggle theme"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Main content area - will be replaced by phase views -->
        <Border Grid.Row="1" Grid.Column="0" x:Name="LegacyContentArea" Padding="32" IsVisible="False">
            <StackPanel Spacing="24">
                <TextBlock x:Name="QuestionText" 
                           Text="Waiting for question..." 
                           FontSize="36" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           TextWrapping="Wrap"/>
                <StackPanel Spacing="12">
                    <Border x:Name="Row0" 
                            Padding="16" 
                            CornerRadius="12" 
                            Background="{DynamicResource OptionBackgroundBrush}"
                            BorderBrush="{DynamicResource DividerBrush}"
                            BorderThickness="2">
                        <DockPanel>
                            <TextBlock x:Name="Choice0Text" 
                                       Text="Choice A" 
                                       FontSize="28" 
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       DockPanel.Dock="Left"/>
                            <TextBlock x:Name="Choice0Count" 
                                       Text="0" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       HorizontalAlignment="Right"/>
                        </DockPanel>
                    </Border>
                    <Border x:Name="Row1" 
                            Padding="16" 
                            CornerRadius="12" 
                            Background="{DynamicResource OptionBackgroundBrush}"
                            BorderBrush="{DynamicResource DividerBrush}"
                            BorderThickness="2">
                        <DockPanel>
                            <TextBlock x:Name="Choice1Text" 
                                       Text="Choice B" 
                                       FontSize="28" 
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       DockPanel.Dock="Left"/>
                            <TextBlock x:Name="Choice1Count" 
                                       Text="0" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       HorizontalAlignment="Right"/>
                        </DockPanel>
                    </Border>
                    <Border x:Name="Row2" 
                            Padding="16" 
                            CornerRadius="12" 
                            Background="{DynamicResource OptionBackgroundBrush}"
                            BorderBrush="{DynamicResource DividerBrush}"
                            BorderThickness="2">
                        <DockPanel>
                            <TextBlock x:Name="Choice2Text" 
                                       Text="Choice C" 
                                       FontSize="28" 
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       DockPanel.Dock="Left"/>
                            <TextBlock x:Name="Choice2Count" 
                                       Text="0" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       HorizontalAlignment="Right"/>
                        </DockPanel>
                    </Border>
                    <Border x:Name="Row3" 
                            Padding="16" 
                            CornerRadius="12" 
                            Background="{DynamicResource OptionBackgroundBrush}"
                            BorderBrush="{DynamicResource DividerBrush}"
                            BorderThickness="2">
                        <DockPanel>
                            <TextBlock x:Name="Choice3Text" 
                                       Text="Choice D" 
                                       FontSize="28" 
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       DockPanel.Dock="Left"/>
                            <TextBlock x:Name="Choice3Count" 
                                       Text="0" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       HorizontalAlignment="Right"/>
                        </DockPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Log panel takes 1/3 of the window width via Grid column -->
        <Border Grid.Row="1" 
                Grid.Column="1" 
                VerticalAlignment="Stretch" 
                Margin="0,16,16,16" 
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource DividerBrush}"
                BorderThickness="2"
                CornerRadius="12">
            <StackPanel>
                <TextBlock Text="ðŸ“‹ Debug Log" 
                           Margin="12" 
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <Border Height="2" 
                        Background="{DynamicResource DividerBrush}" 
                        Margin="8,0"/>
                <ListBox x:Name="LogList" 
                         Margin="8" 
                         FontFamily="Consolas" 
                         FontSize="11"
                         Background="Transparent"
                         Foreground="{DynamicResource TextSecondaryBrush}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding .}" 
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
        <!-- Footer -->
        <Border Grid.Row="2" 
                Grid.ColumnSpan="2" 
                Background="{DynamicResource HeaderBrush}"
                BorderBrush="{DynamicResource DividerBrush}"
                BorderThickness="0,2,0,0"
                Padding="12">
            <TextBlock Text="ðŸŽµ Nuotti Projector" 
                       Foreground="{DynamicResource TextSecondaryBrush}" 
                       HorizontalAlignment="Center"
                       FontSize="12"/>
        </Border>
        </Grid>
        
        <!-- Safe area frame overlay -->
        <controls:SafeAreaFrame x:Name="SafeAreaFrameControl" 
                               ShowFrame="False"
                               ZIndex="1000"/>
        
        <!-- Now Playing banner overlay -->
        <controls:NowPlayingBanner x:Name="NowPlayingBannerControl"
                                  IsPlaying="False"
                                  ZIndex="999"/>
        
        <!-- Reconnect overlay -->
        <controls:ReconnectOverlay x:Name="ReconnectOverlayControl"
                                  IsReconnecting="False"
                                  ZIndex="2000"/>
        
        <!-- F13 - Debug overlay (DEV only) -->
        <controls:DebugOverlay x:Name="DebugOverlayControl"
                               IsDebugVisible="False"
                               ZIndex="3000"/>
    </Grid>
</Window>
