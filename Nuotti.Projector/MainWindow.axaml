<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="Nuotti.Projector.MainWindow"
        Title="Nuotti Projector">
    <!-- Two columns: main content (2/3) and log panel (1/3) -->
    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="2*,*">
        <Border Background="#111" Padding="16" Grid.ColumnSpan="2">
            <Grid ColumnDefinitions="Auto,*">
                <TextBlock x:Name="SessionCodeText" Text="SESSION" FontSize="48" Foreground="#fff" FontWeight="Bold" Grid.Column="0"/>
                <TextBlock x:Name="ConnectionStatus" Text="Connecting..." Foreground="#bbb" Margin="16,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="0" Padding="32">
            <StackPanel Spacing="24">
                <TextBlock x:Name="QuestionText" Text="Waiting for question..." FontSize="36" TextWrapping="Wrap"/>
                <StackPanel Spacing="12">
                    <Border x:Name="Row0" Padding="12" CornerRadius="8" Background="#222">
                        <DockPanel>
                            <TextBlock x:Name="Choice0Text" Text="Choice A" FontSize="28" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="Choice0Count" Text="0" FontSize="28" HorizontalAlignment="Right"/>
                        </DockPanel>
                    </Border>
                    <Border x:Name="Row1" Padding="12" CornerRadius="8" Background="#222">
                        <DockPanel>
                            <TextBlock x:Name="Choice1Text" Text="Choice B" FontSize="28" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="Choice1Count" Text="0" FontSize="28" HorizontalAlignment="Right"/>
                        </DockPanel>
                    </Border>
                    <Border x:Name="Row2" Padding="12" CornerRadius="8" Background="#222">
                        <DockPanel>
                            <TextBlock x:Name="Choice2Text" Text="Choice C" FontSize="28" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="Choice2Count" Text="0" FontSize="28" HorizontalAlignment="Right"/>
                        </DockPanel>
                    </Border>
                    <Border x:Name="Row3" Padding="12" CornerRadius="8" Background="#222">
                        <DockPanel>
                            <TextBlock x:Name="Choice3Text" Text="Choice D" FontSize="28" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="Choice3Count" Text="0" FontSize="28" HorizontalAlignment="Right"/>
                        </DockPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Log panel takes 1/3 of the window width via Grid column -->
        <Border Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" Margin="0,16,16,16" Background="#33000000" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Debug Log" Margin="8" Foreground="#ddd"/>
                <ListBox x:Name="LogList" Margin="8" FontFamily="Consolas" FontSize="12">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding .}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#111" Padding="8">
            <TextBlock Text="Nuotti Projector" Foreground="#888" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
