<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Nuotti.Projector.Controls.SafeAreaFrame">
    
    <Border x:Name="SafeAreaBorder"
            BorderBrush="#FF6B35"
            BorderThickness="2"
            Background="Transparent"
            IsVisible="{Binding ShowFrame}"
            IsHitTestVisible="False">
        <Border.Styles>
            <Style Selector="Border">
                <Style.Animations>
                    <Animation Duration="0:0:2" IterationCount="INFINITE">
                        <KeyFrame Cue="0%">
                            <Setter Property="Opacity" Value="0.3"/>
                        </KeyFrame>
                        <KeyFrame Cue="50%">
                            <Setter Property="Opacity" Value="0.8"/>
                        </KeyFrame>
                        <KeyFrame Cue="100%">
                            <Setter Property="Opacity" Value="0.3"/>
                        </KeyFrame>
                    </Animation>
                </Style.Animations>
            </Style>
        </Border.Styles>
        
        <!-- Corner indicators -->
        <Grid>
            <!-- Top-left corner -->
            <Rectangle Fill="#FF6B35" 
                       Width="20" Height="20"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top"/>
            
            <!-- Top-right corner -->
            <Rectangle Fill="#FF6B35" 
                       Width="20" Height="20"
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Top"/>
            
            <!-- Bottom-left corner -->
            <Rectangle Fill="#FF6B35" 
                       Width="20" Height="20"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom"/>
            
            <!-- Bottom-right corner -->
            <Rectangle Fill="#FF6B35" 
                       Width="20" Height="20"
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Bottom"/>
            
            <!-- Center text -->
            <TextBlock Text="SAFE AREA"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FF6B35"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Background="#80000000"
                       Padding="16,8"/>
        </Grid>
    </Border>
</UserControl>
