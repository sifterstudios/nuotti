<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Nuotti.Projector.Controls.NowPlayingBanner">
    
    <Border x:Name="BannerBorder"
            Background="{DynamicResource PrimaryBrush}"
            CornerRadius="8"
            Padding="16,8"
            Margin="16"
            IsVisible="{Binding IsPlaying}"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            ZIndex="100">
        
        <Border.Styles>
            <Style Selector="Border">
                <Style.Animations>
                    <Animation Duration="0:0:2" IterationCount="INFINITE">
                        <KeyFrame Cue="0%">
                            <Setter Property="Opacity" Value="0.9"/>
                        </KeyFrame>
                        <KeyFrame Cue="50%">
                            <Setter Property="Opacity" Value="1.0"/>
                        </KeyFrame>
                        <KeyFrame Cue="100%">
                            <Setter Property="Opacity" Value="0.9"/>
                        </KeyFrame>
                    </Animation>
                </Style.Animations>
            </Style>
        </Border.Styles>
        
        <StackPanel Orientation="Horizontal" Spacing="12">
            <!-- Music note icon with pulse animation -->
            <TextBlock Text="ðŸŽµ" 
                       FontSize="24" 
                       VerticalAlignment="Center">
                <TextBlock.Styles>
                    <Style Selector="TextBlock">
                        <Style.Animations>
                            <Animation Duration="0:0:1" IterationCount="INFINITE">
                                <KeyFrame Cue="0%">
                                    <Setter Property="RenderTransform" Value="scale(1.0)"/>
                                </KeyFrame>
                                <KeyFrame Cue="50%">
                                    <Setter Property="RenderTransform" Value="scale(1.1)"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="RenderTransform" Value="scale(1.0)"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </TextBlock.Styles>
            </TextBlock>
            
            <!-- Now Playing text -->
            <TextBlock Text="Now Playing:" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Foreground="White" 
                       VerticalAlignment="Center"/>
            
            <!-- Song title -->
            <TextBlock x:Name="SongTitleText"
                       Text="Song Title"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            
            <!-- Artist (if available) -->
            <TextBlock x:Name="ArtistText"
                       Text="by Artist"
                       FontSize="16"
                       Foreground="#E0FFFFFF"
                       VerticalAlignment="Center"
                       IsVisible="{Binding HasArtist}"/>
        </StackPanel>
    </Border>
</UserControl>
