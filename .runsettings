<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>json,cobertura,opencover</Format>
          <Exclude>[*.Tests]*,[*.Test]*</Exclude>
          <IncludeDirectory>../</IncludeDirectory>
          <SingleHit>false</SingleHit>
          <UseSourceLink>true</UseSourceLink>
          <IncludeTestAssembly>false</IncludeTestAssembly>
          <SkipAutoProps>true</SkipAutoProps>
          <DeterministicReport>true</DeterministicReport>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
  <RunConfiguration>
    <MaxCpuCount>0</MaxCpuCount>
    <ResultsDirectory>./TestResults</ResultsDirectory>
    <TreatTestAdapterErrorsAsWarnings>false</TreatTestAdapterErrorsAsWarnings>
    <!-- Note: xUnit doesn't support retry in .runsettings. Use deterministic seeds and mark flaky tests with [Trait("Flaky", "true")] -->
  </RunConfiguration>
  <MSTest>
    <SettingsFile>$(MSBuildProjectDirectory)\TestSettings.testsettings</SettingsFile>
    <ForcedLegacyMode>false</ForcedLegacyMode>
  </MSTest>
</RunSettings>

